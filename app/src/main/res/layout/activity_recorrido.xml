<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="visualoctopus.recorrase.RecorridoActivity"
    android:background="@color/color_appBackground">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageView27"
        android:src="@drawable/imgrecorrido"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:onClick="pushea"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/play"
        android:src="@drawable/play"
        android:layout_below="@+id/imageView27"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tu Recorrido"
        android:id="@+id/title"
        android:textIsSelectable="false"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+0 puntos"
        android:id="@+id/puntos"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/play"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 km recorridos"
        android:id="@+id/km"
        android:textSize="30dp"
        android:layout_below="@+id/puntos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$0.00 ahorrados"
        android:id="@+id/dinero"
        android:textSize="30dp"
        android:layout_below="@+id/km"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-0 kg de CO2"
        android:id="@+id/huella"
        android:textSize="30dp"
        android:layout_below="@+id/dinero"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
