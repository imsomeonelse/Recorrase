<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="visualoctopus.recorrase.MenuActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:onClick="nuevoRecorridoActivity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/nuevaruta"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/btnruta2"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_columnSpan="2" />

        <ImageButton
            android:onClick="buscarRutasActivity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/buscar"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/btnsearch3"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_columnSpan="2" />

        <ImageButton
            android:onClick="rutasActivity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/rutasaqui"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/btnrutasaqui3"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_columnSpan="2" />

        <ImageButton
            android:onClick="profileActivity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton6"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/btnperfil3"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_columnSpan="2" />

        <ImageButton
            android:onClick="logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btn_logout"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/logout" />
    </GridLayout>
</RelativeLayout>
