<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="visualoctopus.recorrase.TitleActivity"
    android:background="@color/color_appBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo3"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="mainActivity"
        android:layout_width="@dimen/dim_buttonWidth1"
        android:layout_height="@dimen/dim_buttonHeight1"
        android:text="Entrar"
        android:id="@+id/btn_entrar"
        android:background="@color/color_buttonBlue"
        android:textSize="25dp"
        android:typeface="normal"
        android:textColor="@color/color_text"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/btn_registra" />

    <Button
        android:onClick="registroActivity"
        android:layout_width="@dimen/dim_buttonWidth1"
        android:layout_height="@dimen/dim_buttonHeight1"
        android:text="RegÃ­strate"
        android:id="@+id/btn_registra"
        android:background="@color/color_buttonBlue"
        android:textSize="25dp"
        android:textColor="@color/color_text"
        android:layout_below="@+id/btn_entrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <ImageButton
        android:onClick="creditosActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/help" />
</RelativeLayout>
