<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="visualoctopus.recorrase.RateActivity"
    android:background="@color/color_appBackground">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageView30"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/imgrecorrido"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Califica esta ruta"
            android:id="@+id/title"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seguridad"
            android:id="@+id/seguridad"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="17dp"
            android:textSize="23dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/rate_seguridad"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/rate3"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Servicio"
            android:id="@+id/servicio"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="17dp"
            android:textSize="23dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/rate_servicio"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/rate3"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Eficiencia"
            android:id="@+id/eficiencia"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginBottom="17dp"
            android:textSize="23dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/rate_eficiencia"
            android:layout_row="4"
            android:layout_column="1"
            android:src="@drawable/rate3"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Unidades"
            android:id="@+id/unidades"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginBottom="17dp"
            android:textSize="23dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/rate_unidades"
            android:layout_row="5"
            android:layout_column="1"
            android:src="@drawable/rate3"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Disponibilidad"
            android:id="@+id/disponibilidad"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_marginBottom="17dp"
            android:textSize="23dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/rate_disponibilidad"
            android:layout_row="6"
            android:layout_column="1"
            android:src="@drawable/rate3"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Comentario"
            android:id="@+id/comentario"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="false"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/textocomentario"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:onClick="rutaDescActivity"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Enviar"
            android:id="@+id/btnenviar"
            android:layout_row="10"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@color/color_buttonBlue"
            android:textSize="@dimen/dim_buttonSize" />
    </GridLayout>
</RelativeLayout>
